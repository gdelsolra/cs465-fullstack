<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
  <meta charset="UTF-8">
  <title>Dive Sites - Bhaccasyoniztas Beach Resort Website Template</title>
  <link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
  <div id="background">
    <div id="page">
      {{> header }} <!-- Includes the header partial -->

      <div id="contents">
        <div class="box">
          <div class="body">
            <h1>Travel</h1>
            <ul id="sites">
    {{#each trips}}

              <li>
                <a href="/travel"><img src="images/{{this.image}}" alt="Img"></a>
                <h2><a href="/travel">{{this.name}}</a></h2>
                <p>{{this.description}}</p>
              </li>

    {{/each}}
            </ul>
          </div>
        </div>
      </div>

      {{> footer }} <!-- Includes the footer partial -->
    </div>
  </div>
</body>
</html>
